
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row justify-content-md-center mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3>@Session["username"]</h3>
                <h2>Order___ <span class="fw-bolder" style="text-indent: 30%">@TempData.Peek("productName")</span>___Products</h2>

            </div> 
            <div class="card-body">
                <form action="" method="post">

                    <div class="row mb-3">
                        <label for="proqty" class="col-sm-3 col-form-label">Quality :</label>
                        <div class="col-sm-8">
                            <input type="number" name="qty" class="form-control" id="proqty" placeholder="Quality" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="prodiscount" class="col-sm-3 col-form-label">Discount :</label>
                        <div class="col-sm-8">
                            <input type="number" name="discount" class="form-control" id="prodiscount" placeholder="Number Discount Of Products" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 text-md-center">
                            <input type="submit" name="takeorder" class="btn btn-success" value="Take Order" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


